<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create_table_comment" author="dev">
        <preConditions>

            <not>
                <tableExists tableName="comment"/>
            </not>

            <tableExists tableName="user"/>
            <tableExists tableName="ads"/>

        </preConditions>

        <createTable tableName="comment">

            <column name="pk" type="Long" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="createdAt" type="long">
                <constraints nullable="false"/>
            </column>

            <column name="text" type="varchar(64)">
                <constraints nullable="false"/>
            </column>

            <column name="ads_pk" type="int">
                <constraints nullable="false"
                             foreignKeyName="fk_comment_ads_pk"
                             referencedTableName="ads"
                             referencedColumnNames="pk"/>
            </column>

            <column name="user_id" type="int">
                <constraints nullable="false"
                             foreignKeyName="fk_comment_user_id"
                             referencedTableName="user"
                             referencedColumnNames="id"/>
            </column>

        </createTable>

        <rollback>
            <dropTable tableName="comment"/>
        </rollback>

    </changeSet>

</databaseChangeLog>